<aside class="cover animated" style="background-image: url({{@blog.cover}})">
    <div class="background-container">
        <div class="profile">
            <header id="aside-header" class="nav-header mobile">
                <a id="aside-close-button" class="open-link right">
                    <i class="fa fa-close"></i>
                </a>
            </header>
            {{#if @blog.logo}}
            <div class="profile-logo">
                <a id="avatar-link" class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <img src="{{@blog.logo}}" alt="{{@blog.title}} avatar" class="avatar rounded hvr-buzz-out" />
                </a>
            </div>
            {{/if}}
            <div class="profile-header">
                <a class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <h1 class="profile-title">{{@blog.title}}</h1>
                </a>
            </div>
            <div class="profile-body">
                <a class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <h3 id="profile-resume"></h3>
                </a>
                <hr class="divider long" />
                <p>{{@blog.description}}</p>
                <hr class="divider short" />
                        <div class="bulletin">
                            <h2>Specs</h2>
                            <p>Guidelines to follow when building an Biothings API</p>
                            <a class="btn" href="https://github.com/SuLab/biothings.api">Learn more</a>
                        </div>
                        <div class="bulletin">
                            <h2>SDK</h2>
                            <P>Software development kit for building Biothings APIGuidelines to follow when building an Biothings API</p>
                            <a class="btn" href="http://biothingsapi.readthedocs.io/">Learn more</a>
                        </div>
                        <div class="bulletin">
                            <h2>Registry</h2>
                            <P>Collections of BioThings APIs</p>
                            <a class="btn" href="https://kevinxin90.github.io/#registry">Learn more</a>
                        </div>

            </div>
            {{> social}}
        </div>
    </div>
</aside>
