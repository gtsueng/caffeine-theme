<aside class="cover animated" style="background-image: url({{@blog.cover}})">
    <div class="background-container">
        <div class="profile">
            <header id="aside-header" class="nav-header mobile">
                <a id="aside-close-button" class="open-link right">
                    <i class="fa fa-close"></i>
                </a>
            </header>
            {{#if @blog.logo}}
            <div class="profile-logo">
                <a id="avatar-link" class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <img src="{{@blog.logo}}" alt="{{@blog.title}} avatar" class="avatar rounded hvr-buzz-out" />
                </a>
            </div>
            {{/if}}
            <div class="profile-header">
                <a class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <h1 class="profile-title">{{@blog.title}}</h1>
                </a>
            </div>
            <div class="profile-body">
                <a class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <h3 id="profile-resume"></h3>
                </a>
                <hr class="divider long" />
                <p>{{@blog.description}}</p>
                <hr class="divider short" />
                    <div class="call-to-action-container">
                      <div class="row">

                        <div class="col s12 m6 l4">
                          <i class="material-icons md-48">list</i>
                          <h2>Specs</h2>
                          <p>Guidelines to follow when building an Biothings API</p>
                          <a class="btn-default" href="https://github.com/kevinxin90/kevinxin90.github.io/blob/master/SPECS.md">Learn more</a>
                        </div>

                        <div class="col s12 m6 l4">
                          <i class="material-icons md-48">build</i>
                          <h2>SDK</h2>
                          <p>Software development kit for building Biothings API </p>
                          <a class="btn-default" href="https://github.com/SuLab/biothings.api">Learn more</a>
                        </div>

                        <div class="col s12 m6 l4">
                          <i class="material-icons md-48">assignment</i>
                          <h2>Registry</h2>
                          <p>Collections of BioThings APIs</p>
                          <a class="btn-default" href="#registry">Learn more</a>
                        </div>

                      </div>
                    </div>
            </div>
            {{> social}}
        </div>
    </div>
</aside>

<div class="blog-header">
    <a title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
        <h1 class="profile-title hvr-float">{{@blog.title}}</h1>
    </a>
    {{navigation}}
</div>