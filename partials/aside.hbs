<aside class="cover animated" style="background-image: url({{@blog.cover}})">
    <div class="background-container">
        <div class="profile">
            <header id="aside-header" class="nav-header mobile">
                <a id="aside-close-button" class="open-link right">
                    <i class="fa fa-close"></i>
                </a>
            </header>
            {{#if @blog.logo}}
            <div class="profile-logo">
                <a id="avatar-link" class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <img src="{{@blog.logo}}" alt="{{@blog.title}} avatar" class="avatar rounded hvr-buzz-out" />
                </a>
            </div>
            {{/if}}
            <div class="profile-header">
                <a class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <h1 class="profile-title">{{@blog.title}}</h1>
                </a>
            </div>
            <div class="profile-body">
                <a class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <h3 id="profile-resume"></h3>
                </a>
                <hr class="divider long" />
                <p>{{@blog.description}}</p>
                <hr class="divider short" />
                    <div class="call-to-action-container">
                        <li class="card">
                            <div class="card-container">
                                <div class="card-body">
                                    <a href="http://biothingsapi.readthedocs.io/" title="link to SDK">
                                        <div class="card-content">
                                            <h2>SDK</h2>
                                            <p class="description">Software development kit for building Biothings API</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </li>

                        <li class="card">
                            <div class="card-container">
                                <div class="card-body">
                                    <a href="https://github.com/kevinxin90/kevinxin90.github.io/blob/master/SPECS.md" title="link to specs">
                                        <div class="card-content">
                                            <h2>Specs</h2>
                                            <p class="description">Guidelines to follow when building an Biothings API</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </li>
                        <li class="card">
                            <div class="card-container">
                                <div class="card-body">
                                    <a href="https://kevinxin90.github.io/#registry" title="link to registry">
                                        <div class="card-content">
                                            <h2>Registry</h2>
                                            <p class="description">Collections of BioThings APIs, e.g. mygene.info, myvariant.info</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </li>
                    </div>

            </div>
            {{> social}}
        </div>
    </div>
</aside>
